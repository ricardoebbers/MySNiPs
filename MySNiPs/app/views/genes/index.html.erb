<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Genes</h1>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Rsid</th>
          <th>Iid</th>
          <th>Cromossomo</th>
          <th>Posição</th>
          <th>Sumario</th>
          <th>Nome</th>
          <th>Orientação</th>
          <th>Estabilizado</th>
          <th>Gmaf</th>
          <th>Revid</th>
          <!-- TODO: ARRUMAR 
          <th colspan="3"></th>
          -->
        </tr>
      </thead>

      <tbody>
        <% @genes.each do |gene| %>
          <tr>
            <td><%= gene.title%></td>
            <td><%= gene.rsid%></td>
            <td><%= gene.iid%></td>
            <td><%= gene.chromosome%></td>
            <td><%= gene.position%></td>
            <td><%= gene.summary%></td>
            <td><%= gene.name%></td>
            <td><%= gene.orientation%></td>
            <td><%= gene.stabilized%></td>
            <td><%= gene.gmaf%></td>
            <td><%= gene.revid%></td>
            <!--
            <td><%= link_to 'Show', gene %></td>
            <td><%= link_to 'Edit', edit_gene_path(gene) %></td>
            <td><%= link_to 'Destroy', gene, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            -->
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @genes %>
    <%= page_entries_info @genes %>
    <!-- TODO: Implementar criação de genes
    <%= link_to 'New Gene', new_gene_path %>
    -->
  </div>
</div>
